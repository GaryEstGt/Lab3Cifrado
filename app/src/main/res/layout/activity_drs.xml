<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DRSA">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="Descifrado RSA" />

        <Button
            android:id="@+id/btnAbrirArchivo"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="59dp"
            android:layout_marginLeft="59dp"
            android:layout_marginTop="23dp"
            android:text="Abrir archivo" />

        <TextView
            android:id="@+id/txtArchivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignBaseline="@+id/btnAbrirArchivo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="94dp"
            android:layout_marginRight="94dp"
            android:layout_toEndOf="@+id/btnAbrirArchivo"
            android:layout_toRightOf="@+id/btnAbrirArchivo"
            android:text="Archivo" />

        <TextView
            android:id="@+id/tvMostrarArchivo"
            android:layout_width="270dp"
            android:layout_height="208dp"
            android:layout_below="@+id/btnAbrirArchivo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:text="Texto" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="152dp"
            android:layout_height="24dp"
            android:layout_below="@+id/tvMostrarArchivo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="33dp"
            android:layout_marginRight="33dp"
            android:layout_toEndOf="@+id/btnAbrirLlave"
            android:layout_toRightOf="@+id/btnAbrirLlave"
            android:text="Abra la llave privada" />

        <Button
            android:id="@+id/btnAbrirLlave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMostrarArchivo"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="59dp"
            android:layout_marginLeft="59dp"
            android:layout_marginTop="23dp"
            android:text="Abrir llave" />

        <TextView
            android:id="@+id/txtClave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnAbrirArchivo"
            android:layout_alignParentTop="true"
            android:layout_marginTop="456dp"
            android:text="Llave" />

        <Button
            android:id="@+id/btnDescifrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtClave"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="161dp"
            android:layout_marginLeft="161dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="473dp"
            android:text="Descifrar" />

    </RelativeLayout>

</ScrollView>