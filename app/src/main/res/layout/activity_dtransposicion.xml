<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DTransposicion">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:layout_toEndOf="@+id/btnAbrirArchivo"
        android:text="Cifrado  Ruta" />

    <Button
        android:id="@+id/btnAbrirArchivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="101dp"
        android:text="Abrir Archivo"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="48dp" />

    <TextView
        android:id="@+id/txtArchivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="104dp"
        android:layout_marginTop="113dp"
        android:text="Archivo"
        android:layout_alignParentRight="true"
        android:layout_marginRight="104dp" />

    <TextView
        android:id="@+id/tvMostrarArchivo"
        android:layout_width="312dp"
        android:layout_height="199dp"
        android:layout_alignLeft="@+id/btnAbrirArchivo"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnAbrirArchivo"
        android:layout_marginBottom="154dp"
        android:editable="false"
        android:fadeScrollbars="true"
        android:isScrollContainer="true"
        android:scrollHorizontally="true"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="horizontal|vertical"
        android:text="Texto" />

    <EditText
        android:id="@+id/txtClave"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="82dp"
        android:layout_marginStart="83dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginLeft="83dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtClave"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:text="Clave"
        android:layout_marginLeft="26dp"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/btnCifrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:text="Descifrar" />

    <EditText
        android:id="@+id/txtColumna"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtClave"
        android:layout_marginEnd="86dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignParentRight="true"
        android:layout_marginRight="86dp" />
</RelativeLayout>